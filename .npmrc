# NPM Security Configuration

# Only allow known registries (prevent typosquatting attacks)
registry=https://registry.npmjs.org/

# Require package signatures when available
audit=true

# Don't save exact versions (allow patch updates)
save-exact=false

# Use package-lock.json for reproducible builds
package-lock=true

# Audit level - fail on moderate and above in CI
audit-level=moderate

# Prevent scripts from unknown packages
ignore-scripts=false

# Enable fund messages (support open source)
fund=true

# Progress display
progress=false
loglevel=error
