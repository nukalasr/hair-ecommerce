{
  "name": "hair-ecommerce",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "npm run validate:prod && ng build --configuration production",
    "build:prod:skip-validation": "ng build --configuration production",
    "validate:prod": "node scripts/validate-prod-config.js",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:headless": "ng test --browsers=ChromeHeadless --watch=false",
    "test:coverage": "ng test --code-coverage --watch=false",
    "test:ci": "ng test --browsers=ChromeHeadlessCI --watch=false --code-coverage"
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0 <21.0.0 || >=22.0.0 <23.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@angular/animations": "^21.1.0",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-browser-dynamic": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@stripe/stripe-js": "^8.3.0",
    "dompurify": "^3.3.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.16.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.1.0",
    "@angular/cli": "^21.1.0",
    "@angular/compiler-cli": "^21.1.0",
    "@sentry/angular": "^10.38.0",
    "@types/dompurify": "^3.0.5",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "puppeteer": "^24.29.1",
    "typescript": "~5.9.0"
  }
}
